@model IHSDC.WebApp.Models.DeletetUserViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Do you wish to delete @Html.DisplayFor(model => model.Username)?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EstablishmentFull)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EstablishmentFull) [ ]@Html.DisplayFor(model => model.EstablishmentAbbreviation) ]
        </dd>

        <dt>
            Presently assigned to
        </dt>

        <dd>        
            @Html.DisplayFor(model => model.Number)<br />
            @Html.DisplayFor(model => model.Rank) @Html.DisplayFor(model => model.FullName)<br />
            <i>@Html.DisplayFor(model => model.Appointment)</i>
        </dd>

        <dt>
            Immediate Superior
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SuperiorEstablishment)
        </dd>
        <dt>
            @Model.SubordinateEstablishments.Count() Immediate Subordinates
        </dt>
        <dd>
            @foreach(var sub in Model.SubordinateEstablishments.ToList())
            {
                sub.ToString();
                <br />
            }
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete User" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Hierarchy")
        </div>
    }
</div>
